{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "rootDirs": ["src", "stories"],
    "outDir": "ts-build",
    "moduleResolution": "node",
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "microbundle"]
  }
}
